{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "outDir": "./dist",
      "declaration": true,
      "sourceMap": true,
      "noImplicitAny": false,
      "noUnusedLocals": false,
      "resolveJsonModule": true,
      "noUnusedParameters": false,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*"
        ]
      },
      "lib": [
        "dom",
        "es2017"
      ]
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "**/*.spec.ts",
      "node_modules",
      "test"
    ]
  }
  